<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_skin_cover_small"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default_avatar"
        android:transitionName="@string/shared_element_name_skin_cover"/>

    <TextView
        android:id="@+id/txt_skin_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#5000"
        android:gravity="left"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/caption"
        android:transitionName="@string/shared_element_name_skin_name"
        android:visibility="gone"/>

</FrameLayout>