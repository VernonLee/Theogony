<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/head_image_width"
        android:layout_height="@dimen/head_image_height"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_skin"
        android:transitionName="@string/shared_element_name_avatar"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/txt_champion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/primary_text_default_dark"
        android:singleLine="true"
        android:ellipsize="middle"/>

</LinearLayout>