<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    
    <ImageView
        android:id="@+id/img_champion_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default_avatar"
        android:transitionName="@string/shared_element_name_avatar"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/txt_champion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/primary_text_default_light"
        android:singleLine="true"
        android:ellipsize="middle"/>
</LinearLayout>